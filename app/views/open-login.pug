doctype html
html(lang="tr")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        //- Bootstrap:
        link(rel="stylesheet", type="text/css", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        //- global-config.css:
        link(rel="stylesheet", href="css/global-config.css")
        //- open-login.css:
        link(rel="stylesheet", type="text/css", href="css/open-login.css")
        title= gameName+" Oturum Açma Sayfası"

    body(onresize="ekranGenisligiAyarlamasi()")#body
        div.container-fluid#oturumCercevesi

            h1.text-center= gameName+" Oyununa Hoş Geldiniz"
            h4.modal-title.text-center Devam Etmek İçin Lütfen Takma İsim Girin:
            form(action="/anlik-isim-kayit", method="post").justify-content-center
                .row
                    input(type="text", placeholder="Oyun için bir takma isim giriniz.", name="nick_name").col-11.col-md-6.my-3.m-auto#nick-name-input
                .row
                    input(type="submit", value="Oyuna Gir").col-11.col-md-6.m-auto.mb-2

        //- Bootstrap JS ve Popper JS:
        script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
        //- open-login.js:
        script(src="js/global-config.js")